<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Internet Permission for API calls -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".MovieBookingApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/cinebook_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/cinebook_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieBooking"
        android:usesCleartextTraffic="true"
        tools:ignore="MissingClass">
        <activity
            android:name=".EditProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.MovieBooking" />
        <activity
            android:name=".ChangePasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.MovieBooking" /> <!-- Movie List Activity -->
        <activity
            android:name=".MovieListActivity"
            android:exported="false"
            android:theme="@style/Theme.MovieBooking" /> <!-- Splash Activity - Launcher (Màn hình khởi động) -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Login Activity -->
        <activity
            android:name=".LoginActivity"
            android:exported="false" /> <!-- Register Activity -->
        <activity
            android:name=".RegisterActivity"
            android:exported="false" /> <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="false" /> <!-- Movie Detail Activity -->
        <activity
            android:name=".MovieDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.MovieBooking" />
        <!-- Search Activity -->
        <activity
            android:name=".SearchActivity"
            android:exported="false"
            android:theme="@style/Theme.MovieBooking"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <!-- Showtime List Activity -->
        <activity
            android:name=".ShowtimeListActivity"
            android:exported="false"
            android:theme="@style/Theme.MovieBooking" />
        <!-- Showtime Detail Activity -->
        <activity
            android:name=".ShowtimeDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.MovieBooking" />
    </application>

</manifest>