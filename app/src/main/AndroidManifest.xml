<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Internet Permission for API calls -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".MovieBookingApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/cinebook_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/cinebook_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieBooking"
        android:usesCleartextTraffic="true"
        tools:ignore="MissingClass">

        <!-- Splash Activity - Launcher (Màn hình khởi động) -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity -->
        <activity
            android:name=".LoginActivity"
            android:exported="false" />

        <!-- Register Activity -->
        <activity
            android:name=".RegisterActivity"
            android:exported="false" />

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- Movie Detail Activity -->
        <activity
            android:name=".MovieDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.MovieBooking" />
    </application>

</manifest>